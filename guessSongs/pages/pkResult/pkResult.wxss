/* pages/pkResult/pkResult.wxss */
.vs {
  height: 215rpx;
  margin-top: 73rpx;
}

.vs .me {
  float: left;
}

.vs .name {
  font-size: 42rpx;
  color: #fff;
  text-align: center;
}

.me .blue {
  width: 252rpx;
  height: 150rpx;
  border-radius: 0 75rpx 75rpx 0;
  background: linear-gradient(to right, #2f80ed, #56ccf2);
  overflow: hidden;
}

.avatar-box {
  width: 130rpx;
  height: 130rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin: 8rpx;
  overflow: hidden;
}

.avatar-box image{
    width: 100%;
    height: 100%;
}

.blue .avatar-box {
  margin-left: 109rpx;
}

.friend {
  float: right;
}

.friend .red {
  width: 252rpx;
  height: 150rpx;
  border-radius: 75rpx 0 0 75rpx;
  background: linear-gradient(to right, #ff71bd, #ff5960);
  overflow: hidden;
}

.red .avatar-box {
  margin-right: 165rpx;
}

