/* pages/guess/guess.wxss */

.myCoin {
    position: absolute;
    top: 20rpx;
    left: 50rpx;
    font-size: 36rpx;
    color: #ffdd48;
}

.myCoin::before {
    content: "";
    display: block;
    float: left;
    margin: 12rpx 15rpx 0 0;
    width: 22rpx;
    height: 24rpx;
    background-image: url('data:image/png;base64,');
    background-size: cover;
    transform: scale(1.4);
}

.from-help{
    width: 400rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin:15rpx auto;
    color: #fff;
    font-size: 34rpx;
    text-align: center;
}
.from-help text{
    max-width: 150rpx;
    display: inline-block;
    vertical-align: bottom;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.sequence {
    width: 180rpx;
    height: 60rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    margin: 15rpx auto;
    background: rgba(0, 0, 0, 0.3);
    text-align: center;
    font-size: 34rpx;
    color: #fff;
}

.sequence text {
    color: #0ee;
    margin: 0 5rpx;
}

.disk {
    position: relative;
    width: 400rpx;
    height: 399rpx;
    margin: 30rpx auto;
    background: url('https://static.guojiang.tv/src/miniapp/guessSongs/guess/disk.png') no-repeat 0 0 scroll;
    background-size: cover;
}

.disk .tape {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 263rpx;
    height: 263rpx;
    background: url('https://static.guojiang.tv/src/miniapp/guessSongs/guess/tape.png') no-repeat 0 0 scroll;
    background-size: cover;
    animation: rotate 2s linear infinite;
}

.tape.play {
    animation-play-state: running;
    -webkit-animation-play-state: running;
}

.tape.pause {
    animation-play-state: paused;
    -webkit-animation-play-state: paused;
}

@keyframes rotate {
    0% {
        transform: translate(-50%, -50%) rotate(0);
    }

    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

.disk .play-btn {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 78rpx;
    height: 78rpx;
    background-size: cover;
}

.play-btn.play {
    background-image: url('https://static.guojiang.tv/src/miniapp/guessSongs/guess/play.png');
}

.play-btn.pause {
    background-image: url('https://static.guojiang.tv/src/miniapp/guessSongs/guess/pause.png');
}

.tips-help{
    display: flex;
    justify-content: center;
    width: 450rpx;
    margin:0 auto;
}

.tips {
    position: relative;
    /* float: left; */
    width: 210rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border-radius: 30rpx;
    background: rgba(0, 0, 0, 0.3);
}

.tips .deduct {
    position: absolute;
    opacity: 0;
    top: 0;
    color: #ffdd48;
    font-size: 30rpx;
    left: 50%;
    
}
.tips .ani{
    animation: toUp 1s forwards;
}
@keyframes toUp{
    0%{
        opacity: 0;
        transform: translate(-50%, -50rpx);
    }
    50%{
        opacity: 1;
        transform: translate(-50%, -70rpx);
    }
    100%{
        opacity: 0;
        transform: translate(-50%, -90rpx);
    }
}


.tips::before {
    content: "";
    display: block;
    float: left;
    width: 27rpx;
    margin: 15rpx 5rpx 0 15rpx;
    height: 32rpx;
    background: url('https://static.guojiang.tv/src/miniapp/guessSongs/guess/tips.png') no-repeat 0 0 scroll;
    background-size: cover;
}

.tips::after {
    content: "";
    display: block;
    float: right;
    width: 30rpx;
    margin: 12rpx 20rpx 0 0;
    height: 35rpx;
    transform: scale(0.7);
    background-image: url('data:image/png;base64,');
    background-size: cover;
}

.answer .shake{
    color: red!important;
    animation: shake 0.3s forwards;
}
@keyframes shake{
    0%{transform: translateX(0)}
    25%{transform: translateX(-4rpx)}
    50%{transform: translateX(0)}
    75%{transform: translateX(4rpx)}
    100%{transform: translateX(0)}
}


