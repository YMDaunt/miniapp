.wrap{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.mask{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
.content{
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 2;
    transform: translate(-50%, -60%);
    width: 602rpx;
	height: 400rpx;
	background-color: #ffffff;
    border-radius: 30rpx;
    padding-bottom: 47rpx;
    overflow:initial;
}
.title{
    width: 100%;
    height: 145rpx;
    display: block;
    border-radius: 30rpx;
}
.hint{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #666666;
    padding: 48rpx 0 50rpx;
}
.btn{
    width: 360rpx;
	height: 84rpx;
    line-height: 84rpx;
    margin: 0 auto;
	background-color: #ec2f2b;
	border-radius: 42rpx;
	font-size: 30rpx;
	letter-spacing: 0rpx;
    color: #ffffff;
    text-align: center;
}
.close{
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    top: -50rpx;
    right: -28rpx;
}