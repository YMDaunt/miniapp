page{
    background: #f5f5f5;
}
.avatar_wrap{
    width: 100%;
    height: 750rpx;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 19rpx;
}
.avatar_wrap .avatar{
    width: 100%;
    height: auto;
    display: block;
}
.avatar_wrap .info_wrap{
    position: absolute;
    z-index:2;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}
.avatar_wrap .nickname{
    font-size: 36rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #ffffff;
    left: 31rpx;
    top: 635rpx;
    position: absolute;
}
.avatar_wrap .uid{
    font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #ffffff;
    left: 32rpx;
    top: 696rpx;
    position: absolute;
}

.avatar_wrap .mask{
    position: absolute;
    z-index:1;
    width: 750rpx;
	height: 244rpx;
	background-image: linear-gradient(0deg, 
		rgba(0,0,0,1), 
		rgba(255,255,255,0));
    opacity: 0.6;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
}

.ul{
    background: #fff;
}
.ul .li{
    width: 750rpx;
    background-color: #ffffff;
    padding:0 0 0 29rpx;
}
.ul .li.active{
    opacity: 0.7;
}
.ul button.li::after{
    border: none;
}
.ul .li .li_wrap{
    border-bottom: 1px solid #e6e6e6;
    font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2rpx;
	color: #333333;
    position: relative;
    width: 100%;
	height: 88rpx;
    display: flex;
    align-items: center;
}
.li_wrap .icon{
    width: 40rpx;
    height: auto;
    display: inline;
    margin-right: 30rpx;
}
.li_wrap .li_coin_num{
	font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
    color: #999999;
    padding-left: 20rpx;
}

.li_wrap .li_coin_num.small{
    font-size: 24rpx;
    color: #999999;
}
.li_wrap .recharge{
    position: absolute;
    right: 30rpx;
    height: 100%;
    display: flex;
    align-items: center;
}
.li_wrap .recharge text{
    font-size: 32rpx;
    color: #999999;
    padding-right: 20rpx;
}
.li_wrap .recharge .arrow{
    width: 14rpx;
    height: 22rpx;
    display: inline-block;
    position: relative;
    top: 1px;
}
.ul .li:nth-last-child(1) .li_wrap{
    border-bottom: none;
}

.logout{
    width: 400rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin: 80rpx auto 0;
    font-size: 14px;
}