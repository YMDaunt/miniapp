.content{
    background: #ffffff;
    padding-top: 33rpx;
    padding-left: 61rpx;
}
.title{
    font-size: 24rpx;
    color: #999999;
    padding-bottom: 34rpx;
    display: block;
}

.ul .li{
    width: 285rpx;
    height: 64rpx;
    float: left;
	border-radius: 32rpx;
    border: solid 2rpx #999999;
    margin-bottom: 47rpx;
    font-size: 30rpx;
    color: #666666;
    text-align: center;
    line-height: 64rpx;
    margin-right: 60rpx;
}
.ul .li:nth-child(2n){
    margin-right: 0;
}
.ul .active{
    background-color: #ff0071;
    color: #ffffff;
    border: none;
}

.img_ul{
    margin-bottom: 20rpx;
}
.img_li{
    width: 240rpx;
	height: 160rpx;
    border-radius: 10rpx;
    margin-right: 34rpx;
    position: relative;
}
.img_wrap{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.img_li .screenshot{
    width: 240rpx;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}
.img_li .close{
    width: 28rpx;
    height: 28rpx;
    display: block;
    position: absolute;
    top: -14rpx;
    right: -14rpx;
}
.select_hover{
    opacity: 0.6;
}
.submit{
    width: 630rpx;
	height: 90rpx;
	background-color: #ff0071;
    border-radius: 45rpx;
    font-size: 32rpx;
    color: #ffffff;
    text-align: center;
    display: block;
    margin: 26rpx 0 0;
}
.submit_active{
    opacity: 0.6;
}